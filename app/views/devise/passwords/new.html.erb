<style>
  .shared-header-cont{display:none;}
</style>
<div class="form-cont">
  <div class="new-user", style="background-image: url('<%= asset_path 'forgotPass.svg' %>');"></div>
  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
    <div class="error-messages">
      <%= render "devise/shared/error_messages", resource: resource%>
    </div>
    <h1 class="form-title">Forgot your password?</h1>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "Email Address", class:"form-input" %>
    <%= f.submit "Send me reset password instructions", class:"form-submit" %>
    <%= render "devise/shared/links" %>
    <%= render "/shared/buttons" %>
  <% end %>
</div>
